<Application
    x:Class="QualityControl_WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QualityControl_WinUI">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->                
            </ResourceDictionary.MergedDictionaries>
            <Color x:Key="AppCommonBackground">Transparent</Color>
            <SolidColorBrush x:Key="WindowCaptionBackground" Color="{ThemeResource AppCommonBackground}"/>
            <SolidColorBrush x:Key="WindowCaptionBackgroundDisabled" Color="{ThemeResource AppCommonBackground}"/>
            <!-- Other app resources here -->
        </ResourceDictionary>
    </Application.Resources>
</Application>
